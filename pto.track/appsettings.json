{
  "PathBase": "/pto-track",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "PtoTrackDbContext": "user-secrets"
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Mode": "ActiveDirectory",
    "Domain": "CORP"
  },
  "IdentitySync": {
    "Enabled": false,
    "IntervalMinutes": 60,
    "EnableOnDemandSync": true,
    "IdentityServiceUrl": "https://api.example.com/identity",
    "AdpDataMartUrl": "https://api.example.com/adp",
    "IdentityServiceApiKey": "user-secrets",
    "AdpDataMartApiKey": "user-secrets",
    "MaxConcurrency": 1
  }
}