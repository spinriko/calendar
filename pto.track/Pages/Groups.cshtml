@page
@model pto.track.Pages.GroupsModel
@{
    ViewData["Title"] = "Group Management";
}

<div class="container mt-4" id="groupsApp">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="display-5">Group Management</h1>
            <p class="lead text-muted">Manage organizational groups for resource organization</p>
        </div>
    </div>

    <!-- Access Denied Message (shown for non-admins) -->
    <div id="accessDenied" class="alert alert-danger" style="display: none;">
        <h4 class="alert-heading">Access Denied</h4>
        <p>You must be an Administrator to access this page.</p>
    </div>

    <!-- Admin Content (shown for admins) -->
    <div id="adminContent" style="display: none;">
        <!-- Action Buttons -->
        <div class="row mb-3">
            <div class="col-md-12">
                <button class="btn btn-primary" id="btnCreateGroup">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-plus-circle me-1" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path
                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                    Create New Group
                </button>
            </div>
        </div>

        <!-- Group Resource Listing -->
        <div class="row mb-4">
            <div class="col-md-12">
                <label for="groupSelect">Select Group:</label>
                <select id="groupSelect" class="form-select w-auto d-inline-block" style="min-width:200px;"
                    onchange="groupsApp.fetchResourcesForGroup()">
                    <option value="">-- Select Group --</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="resourcesPanel" style="display:none;">
                    <h4>Resources in Group</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Roles</th>
                            </tr>
                        </thead>
                        <tbody id="resourcesTableBody">
                            <!-- Populated by JS -->
                        </tbody>
                    </table>
                    <div id="noResources" class="text-muted" style="display:none;">No resources found for this group.
                    </div>
                </div>
            </div>
        </div>

        <!-- Groups Table -->
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Groups</h5>
                    </div>
                    <div class="card-body">
                        <div id="loadingSpinner" class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2 text-muted">Loading groups...</p>
                        </div>
                        <div id="groupsTableContainer" style="display: none;">
                            <table class="table table-striped table-hover" id="groupsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="groupsTableBody">
                                    <!-- Populated by JavaScript -->
                                </tbody>
                            </table>
                            <div id="noGroups" class="text-center py-4 text-muted" style="display: none;">
                                <p>No groups found. Create a group to get started.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Group Modal -->
<div class="modal fade" id="groupModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="groupModalTitle">Create Group</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="groupForm">
                    <div class="mb-3">
                        <label for="groupName" class="form-label">Group Name</label>
                        <input type="text" class="form-control" id="groupName" required>
                        <div class="invalid-feedback">Group name is required</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSaveGroup">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the group "<strong id="deleteGroupName"></strong>"?</p>
                <p class="text-muted small">This action cannot be undone. Groups with associated resources cannot be
                    deleted.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="btnConfirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module">
        (async () => {
            const basePath = '@Url.Content("~/")';
            let moduleUrl = basePath + 'dist/groups-app.js';
            try {
                const resp = await fetch(basePath + 'dist/asset-manifest.json', { cache: 'no-store' });
                if (resp && resp.ok) {
                    const manifest = await resp.json();
                    if (manifest && manifest['groups-app.js']) {
                        const raw = manifest['groups-app.js'];
                        moduleUrl = raw.startsWith('/') ? (basePath.replace(/\/$/, '') + raw) : (basePath + raw);
                    }
                }
            } catch (e) {
                // ignore and fall back
            }

            try {
                const mod = await import(moduleUrl);
                // module may export the app as named export or default
                const exported = mod.groupsApp || mod.default || mod;
                const app = (exported && exported.init) ? exported : (exported && exported.groupsApp) ? exported.groupsApp : null;
                // If the module attached a global, prefer that (legacy)
                if (!app && window.groupsApp) {
                    window.groupsApp.init('@Url.Content("~/")');
                    return;
                }

                if (app && typeof app.init === 'function') {
                    app.init('@Url.Content("~/")');
                } else if (typeof exported === 'function') {
                    // some modules export a factory function
                    exported('@Url.Content("~/")');
                } else {
                    console.error('groups-app: unable to find init function on module export', mod);
                }
            } catch (err) {
                console.error('Failed to load groups-app module', err);
            }
        })();
    </script>
}