<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PTO Track</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">PTO Track</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/AbsencesScheduler">Leave Requests (Scheduler)</a>
                    </li>
                    <li class="nav-item" id="groupsNavItem" style="display: none;">
                        <a class="nav-link" asp-page="/Groups">Groups</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @if (TempData["ErrorMessage"] != null)
    {
        <div id="errorBanner" class="alert alert-warning alert-dismissible fade show m-3" role="alert">
            <strong>Access Denied:</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <script>
            // Auto-dismiss the banner after 3 seconds
            setTimeout(function () {
                const banner = document.getElementById('errorBanner');
                if (banner) {
                    const bsAlert = new bootstrap.Alert(banner);
                    bsAlert.close();
                }
            }, 3000);
        </script>
    }

    <div class="main">
        @RenderBody()
    </div>

    @if (ViewData["ShowImpersonation"] as bool? ?? false)
    {
        <partial name="_ImpersonationPanel" />
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
            async function chooseSiteScript() {
                try {
                    const resp = await fetch('/dist/asset-manifest.json', { cache: 'no-cache' });
                    if (resp.ok) {
                        const manifest = await resp.json();
                        // prefer an exact match for site.js (with or without hash)
                        const key = Object.keys(manifest).find(k => k.startsWith('site') || k === 'site.js') || 'site.js';
                        const url = manifest[key] || '/dist/site.js';
                        const s = document.createElement('script');
                        s.type = 'module';
                        s.src = url;
                        document.body.appendChild(s);
                        return;
                    }
                } catch (e) {
                    console.debug('Manifest not found or invalid, falling back to /dist/site.js', e);
                }
                const s = document.createElement('script');
                s.type = 'module';
                s.src = '/dist/site.js';
                document.body.appendChild(s);
            }
            chooseSiteScript();
        })();
    </script>

    <script>
        // Show Groups menu item for Admin users only
        (async function () {
            try {
                const response = await fetch('/api/CurrentUser');
                if (response.ok) {
                    const user = await response.json();
                    if (user.roles && user.roles.includes('Admin')) {
                        const groupsNavItem = document.getElementById('groupsNavItem');
                        if (groupsNavItem) {
                            groupsNavItem.style.display = 'block';
                        }
                    }
                }
            } catch (error) {
                console.error('Error checking user roles:', error);
            }
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>