<!DOCTYPE html>
<html lang="en">

@inject Microsoft.Extensions.Hosting.IHostEnvironment Environment
@using System.Reflection

@functions {
    private string GetAssemblyVersionDisplay()
    {
        var asm = Assembly.GetEntryAssembly() ?? typeof(Program).Assembly ?? Assembly.GetExecutingAssembly();

        // Prefer informational version (may include build metadata like a commit hash)
        var info = asm.GetCustomAttribute<AssemblyInformationalVersionAttribute>()?.InformationalVersion;
        if (!string.IsNullOrWhiteSpace(info))
        {
            // informational version is often in the form: 1.2.3+<commit>
            var parts = info.Split('+');
            var ver = parts.Length > 0 ? parts[0] : info;
            if (parts.Length > 1 && !string.IsNullOrWhiteSpace(parts[1]))
            {
                var meta = parts[1];
                // keep a short fingerprint so it's useful but not noisy
                var shortMeta = meta.Length > 8 ? meta.Substring(0, 8) : meta;
                return $"v{ver}+{shortMeta}";
            }
            return $"v{ver}";
        }

        var file = asm.GetCustomAttribute<AssemblyFileVersionAttribute>()?.Version;
        if (!string.IsNullOrWhiteSpace(file)) return "v" + file;

        var nameVer = asm.GetName()?.Version;
        if (nameVer != null) return $"v{nameVer.Major}.{nameVer.Minor}.{nameVer.Build}";

        return "v0.0.0";
    }
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PTO Track</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @if (!Environment.IsEnvironment("Testing"))
    {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    }
</head>

<body>
    @using System.Reflection
    @functions {
        private string GetAssemblyVersionDisplay()
        {
            try
            {
                var assembly = Assembly.GetEntryAssembly() ?? Assembly.GetExecutingAssembly();
                var info = assembly.GetCustomAttribute<AssemblyInformationalVersionAttribute>()?.InformationalVersion;
                if (!string.IsNullOrEmpty(info))
                {
                    var parts = info.Split('+');
                    if (parts.Length == 2)
                    {
                        var shortMeta = parts[1].Length >= 8 ? parts[1].Substring(0, 8) : parts[1];
                        return $"v{parts[0]}+{shortMeta}";
                    }
                    return $"v{info}";
                }

                var fileVer = assembly.GetCustomAttribute<AssemblyFileVersionAttribute>()?.Version;
                if (!string.IsNullOrEmpty(fileVer)) return $"v{fileVer}";

                var ver = assembly.GetName().Version?.ToString();
                return ver != null ? $"v{ver}" : string.Empty;
            }
            catch
            {
                return string.Empty;
            }
        }
    }
    @{
        var basePath = Context.Request.PathBase.HasValue ? Context.Request.PathBase.Value : "/";
    }
    <div style="background: #ffc; color: #333; border-bottom: 1px solid #cc0; padding: 4px 12px; font-size: 0.95em;">
        <strong>Debug:</strong> Current PathBase = <code>@basePath</code>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">PTO Track</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/AbsencesScheduler">Leave Requests (Scheduler)</a>
                    </li>
                    <li class="nav-item" id="groupsNavItem" style="display: none;">
                        <a class="nav-link" asp-page="/Groups">Groups</a>
                    </li>
                </ul>
            </div>
            <span id="versionDisplay" class="navbar-text version-info ms-auto">@GetAssemblyVersionDisplay()</span>
        </div>
    </nav>

    @if (TempData["ErrorMessage"] != null)
    {
        <div id="errorBanner" class="alert alert-warning alert-dismissible fade show m-3" role="alert">
            <strong>Access Denied:</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <script>
            // Auto-dismiss the banner after 3 seconds
            setTimeout(function () {
                const banner = document.getElementById('errorBanner');
                if (banner) {
                    // Guard against missing bootstrap script during Testing (or in constrained environments)
                    if (typeof bootstrap !== 'undefined' && bootstrap && bootstrap.Alert) {
                        try {
                            const bsAlert = new bootstrap.Alert(banner);
                            bsAlert.close();
                        } catch (e) {
                            banner.style.display = 'none';
                        }
                    } else {
                        // No bootstrap available; hide the banner gracefully
                        banner.style.display = 'none';
                    }
                }
            }, 3000);
        </script>
    }

    <div class="main">
        @RenderBody()
    </div>

    @if (ViewData["ShowImpersonation"] as bool? ?? false)
    {
        <partial name="_ImpersonationPanel" />
    }

    @if (!Environment.IsEnvironment("Testing"))
    {
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    }

    <script>
        (function () {
            const basePath = '@Url.Content("~/")';
            async function chooseSiteScript() {
                try {
                    const resp = await fetch(basePath + 'dist/asset-manifest.json', { cache: 'no-cache' });
                    if (resp.ok) {
                        const manifest = await resp.json();
                        // prefer an exact match for site.js (with or without hash)
                        const key = Object.keys(manifest).find(k => k.startsWith('site') || k === 'site.js') || 'site.js';
                        const raw = manifest[key] || 'dist/site.js';
                        const url = raw.startsWith('/') ? (basePath.replace(/\/$/, '') + raw) : (basePath + raw);
                        const s = document.createElement('script');
                        s.type = 'module';
                        s.src = url;
                        document.body.appendChild(s);
                        return;
                    }
                } catch (e) {
                    console.debug('Manifest not found or invalid, falling back to dist/site.js', e);
                }
                const s = document.createElement('script');
                s.type = 'module';
                s.src = basePath + 'dist/site.js';
                document.body.appendChild(s);
            }
            chooseSiteScript();
        })();
    </script>

    <script>
        // Show Groups menu item for Admin users only
        (async function () {
            const basePath = '@Url.Content("~/")';
            try {
                const response = await fetch(basePath + 'api/CurrentUser');
                if (response.ok) {
                    const user = await response.json();
                    if (user.roles && user.roles.includes('Admin')) {
                        const groupsNavItem = document.getElementById('groupsNavItem');
                        if (groupsNavItem) {
                            groupsNavItem.style.display = 'block';
                        }
                    }
                }
            } catch (error) {
                console.error('Error checking user roles:', error);
            }
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>